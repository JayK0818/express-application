<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('public'); -%>
    <title>登录</title>
    <style>
      #login-form[v-cloak] {
        display: none;
      }
      #login-form .title {
        margin: 30px 0;
        padding: 16px 0;
        text-align: center;
        font-weight: bold;
        font-size: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('layout/header'); -%>
    <div id="login-form">
      <div class="title">用户登录</div>
      <n-grid cols="24" item-responsive>
        <n-grid-item span="0 560:4 720:7"></n-grid-item>
        <n-grid-item span="0:24 560:16 720:10">
          <n-form :model="state" :rules="rules" ref="formRef">
            <n-form-item path="username" label="用户名">
              <n-input v-model:value="state.username" @keydown.enter.prevent />
            </n-form-item>
            <n-form-item path="password" label="密码">
              <n-input v-model:value="state.password" type="password" />
            </n-form-item>
            <n-space justify="end">
              <n-checkbox> 记住我 </n-checkbox>
            </n-space>
            <n-form-item>
              <n-button round type="primary" @click="handleLogin" block
                >登录</n-button
              >
            </n-form-item>
          </n-form>
        </n-grid-item>
        <n-grid-item span="0 560:4 720:7"></n-grid-item>
      </n-grid>
    </div>
    <%- include('layout/footer'); -%>
    <script type="text/javascript" src="js/login.js"></script>
  </body>
</html>
